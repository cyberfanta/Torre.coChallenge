<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- shadow-->
    <item android:left="5dp" android:top="5dp">
        <shape>
            <solid
                android:color="@color/soft_black_56"
                />
            <corners
                android:topLeftRadius="@dimen/shared_corners"
                android:topRightRadius="@dimen/shared_corners"
                />
        </shape>
    </item>
    <!-- Line -->
    <item android:bottom="2dp" android:right="2dp">
        <shape>
            <corners
                android:topLeftRadius="@dimen/shared_corners"
                android:topRightRadius="@dimen/shared_corners"
                />
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/white_torre"
                />
            <padding android:bottom="1dp"/>
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="2dp" android:right="2dp">
        <shape>
            <solid
                android:color="@color/soft_black"
                />
            <corners
                android:topLeftRadius="@dimen/shared_corners"
                android:topRightRadius="@dimen/shared_corners"
                />
        </shape>
    </item>
</layer-list>