<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Line -->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/shared_corners"
                />
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/white_torre"
                />
            <padding android:right="1dp"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid
                android:color="@color/soft_black"
                />
            <corners
                android:bottomLeftRadius="@dimen/shared_corners"
                />
        </shape>
    </item>
</layer-list>